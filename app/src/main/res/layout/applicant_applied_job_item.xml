<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/titletxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datetxt"
            android:text="Seniour Software Engineer"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/companytxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datetxt"
            android:text="TCS India"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/locationtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datetxt"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="Titile of job"
            android:textColor="#000000"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="top"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_edit_road_24" />



            <TextView
                android:id="@+id/skilltxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/datetxt"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Android, Java, Kotlin"
                android:textColor="#000000"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_description_24" />

            <TextView
                android:id="@+id/descriptiontxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Android, Java, Kotlin, Android, Java, Kotlin, Android, Java, Kotlin,Android, Java, Kotlin, Android, Java, Kotlin, Android, Java, Kotlin, Android, Java, Kotlin, Android, Java, Kotlin"
                android:textColor="#000000"
                android:textSize="11sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/salarytxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datetxt"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_baseline_money_24"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="$50000"
            android:textColor="#000000"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/datetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datetxt"
            android:layout_marginTop="5dp"
            android:gravity="end"
            android:layout_gravity="end"
            android:text="Posted on - Jan 9, 2020"
            android:textColor="#000000"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/statustxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Application Statues"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:textStyle="italic|bold" />


    </LinearLayout>



</androidx.cardview.widget.CardView>