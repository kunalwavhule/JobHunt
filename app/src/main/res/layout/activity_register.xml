<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_margin="20dp"
    android:layout_height="match_parent"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="10dp"
            android:background="@drawable/edit_background"
            android:hint="Name"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/email"
            android:background="@drawable/edit_background"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/name"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/password"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/email"
            android:background="@drawable/edit_background"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/cpassword"
            android:background="@drawable/edit_background"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_below="@+id/password"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="10dp"

            android:hint="Confirm Password"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/phoneno"
            android:layout_width="match_parent"
            android:background="@drawable/edit_background"
            android:layout_marginTop="15dp"
            android:layout_height="50dp"
            android:layout_below="@+id/cpassword"
            android:drawableLeft="@drawable/ic_phonenumber"
            android:drawablePadding="10dp"
            android:hint="Phone number"
            android:paddingLeft="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/applicant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register as Applicant" />

            <CheckBox
                android:id="@+id/recruiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/applicant"
                android:gravity="center"
                android:text="Register as Recruiter" />

        </RelativeLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_below="@+id/recruiter"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/recruiter"
            android:onClick="Register"
            android:background="@drawable/button_background"
            android:text="register" />
    </LinearLayout>

</ScrollView>