<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="25dp"
            android:background="@color/teal_200"
            android:layout_height="wrap_content"
            android:text="Update details" />

        <EditText
            android:id="@+id/titleupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_margin="10dp"
            android:background="@drawable/rounded"
            android:hint="Title"
            android:inputType="textPersonName"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/desupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleupdate"
            android:layout_margin="10dp"
            android:background="@drawable/rounded"
            android:hint="Description"
            android:inputType="textPersonName"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/skillupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desupdate"
            android:layout_margin="10dp"
            android:background="@drawable/rounded"
            android:hint="Skill"
            android:inputType="textPersonName"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/salaryupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/skillupdate"
            android:layout_margin="10dp"
            android:background="@drawable/rounded"
            android:hint="Skill"
            android:inputType="textPersonName"
            android:textSize="25dp" />


        <Button
            android:id="@+id/updatebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/salaryupdate"
            android:layout_margin="10dp"
            android:background="@drawable/rounded"
            android:text="Update"
            android:minHeight="48dp"
            android:textSize="25dp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>